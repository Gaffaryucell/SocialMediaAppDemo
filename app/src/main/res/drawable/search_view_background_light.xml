<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Güven veren mavi tonu -->
            <corners android:radius="20dp" /> <!-- Kenarları kıvrımlı -->
        </shape>
    </item>

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Kenarlık rengi -->
            <corners android:radius="10dp" /> <!-- Kenarları kıvrımlı -->
        </shape>
    </item>
</layer-list>

